<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="driverProvider" class="org.jbehave.web.selenium.FirefoxWebDriverProvider" />

    <bean id="spitterService" class="com.rafalkalita.spitter.service.SpitterServiceImpl" />

    <bean id="webDriverProvider" class="org.jbehave.web.selenium.PerStoryWebDriverSteps">
        <constructor-arg ref="driverProvider"/>
    </bean>

    <!--<bean id="lifecycleSteps" class="com.rafalkalita.spitter.specification.steps.LifecycleSteps">-->
        <!--<constructor-arg ref="driverProvider"/>-->
    <!--</bean>-->

    <bean id="journaledSteps" class="com.rafalkalita.spitter.specification.steps.JournaledStoriesSteps">
        <constructor-arg ref="driverProvider"/>
    </bean>

    <bean id="pageFactory" class="com.rafalkalita.spitter.specification.pages.PageFactory">
        <constructor-arg ref="driverProvider"/>
        <constructor-arg ref="spitterService"/>
    </bean>

    <bean id="spitterSteps" class="com.rafalkalita.spitter.specification.steps.SpitterSteps">
        <constructor-arg ref="pageFactory"/>
    </bean>


</beans>